{
  "name": "ngx-trend",
  "version": "0.0.0-placeholder",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ts-node build.ts",
    "publish": "cd dist && npm publish",
    "bundlesize": "npx bundlesize",
    "test": "ng test --watch=false --browsers=ChromeCI",
    "test:ci": "ng test --watch=false --code-coverage --no-progress --browsers=ChromeCI",
    "lint": "ng lint ngx-trend --type-check --format stylish",
    "lint:fix": "ng lint ngx-trend --type-check --fix --format stylish",
    "e2e": "ng e2e",
    "ghpages": "ng build --prod --no-progress --baseHref='/ngx-trend/'",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "travis-deploy-once": "travis-deploy-once",
    "commit": "git-cz",
    "semantic-release": "cd dist && semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.2",
    "@angular/cdk": "6.0.2",
    "@angular/common": "6.0.2",
    "@angular/compiler": "6.0.2",
    "@angular/core": "6.0.2",
    "@angular/forms": "6.0.2",
    "@angular/material": "6.0.2",
    "@angular/platform-browser": "6.0.2",
    "@angular/platform-browser-dynamic": "6.0.2",
    "@angular/router": "6.0.2",
    "@ctrl/ngx-github-buttons": "2.0.3",
    "core-js": "2.5.5",
    "hammerjs": "2.0.8",
    "rxjs": "6.1.0",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "6.0.7",
    "@angular/compiler-cli": "6.0.2",
    "@angular/language-service": "6.0.2",
    "@angular-devkit/build-angular": "0.6.3",
    "@commitlint/cli": "6.2.0",
    "@commitlint/config-conventional": "6.1.3",
    "@types/fs-extra": "5.0.2",
    "@types/jasmine": "2.8.7",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "10.0.10",
    "@types/rimraf": "2.0.2",
    "codelyzer": "4.3.0",
    "fs-extra": "6.0.0",
    "jasmine-core": "2.99.1",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.4.2",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "0.2.2",
    "ng-packagr": "3.0.0-rc.3",
    "rimraf": "2.6.2",
    "semantic-release": "15.4.1",
    "travis-deploy-once": "5.0.0",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "2.7.2"
  },
  "release": {
    "branch": "master"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/bundles/ngx-trend.umd.js",
      "maxSize": "5 kB"
    },
    {
      "path": "./dist/bundles/ngx-trend.umd.min.js",
      "maxSize": "3 kB"
    },
    {
      "path": "./dist/esm5/ngx-trend.js",
      "maxSize": "5 kB"
    },
    {
      "path": "./dist/esm2015/ngx-trend.js",
      "maxSize": "5 kB"
    }
  ]
}
